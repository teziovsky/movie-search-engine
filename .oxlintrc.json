{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["unicorn", "typescript", "oxc", "import", "vue"],
  "categories": {
    "correctness": "deny",
    "suspicious": "warn"
  },
  "env": {
    "builtin": true,
    "browser": true
  },
  "globals": {},
  "ignorePatterns": ["dist/**", "node_modules/**", ".vite/**", ".vercel/**", ".agents/**", "public/**", "**/*.d.ts"],
  "rules": {
    "no-debugger": "error",
    "no-console": "warn",
    "no-alert": "warn",
    "eqeqeq": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-expressions": "error",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "sort-imports": "off",
    "import/group-exports": "off",
    "import/no-cycle": "warn",
    "import/no-duplicates": "error",
    "import/no-mutable-exports": "error",
    "import/no-named-default": "off",
    "import/no-named-export": "off",
    "import/no-unassigned-import": "off",
    "import/prefer-default-export": "off",
    "typescript/consistent-type-imports": "warn",
    "typescript/no-explicit-any": "warn",
    "typescript/no-floating-promises": "warn",
    "vue/no-export-in-script-setup": "error",
    "vue/no-lifecycle-after-await": "error",
    "vue/valid-define-emits": "error",
    "vue/valid-define-props": "error",
    "vue/prefer-import-from-vue": "warn",
    "unicorn/filename-case": "off"
  },
  "settings": {},
  "overrides": [
    {
      "files": ["vite.config.*", "**/*.config.*"],
      "env": {
        "browser": false,
        "node": true
      },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["**/*.test.*", "**/*.spec.*", "tests/**/*", "src/**/__tests__/**/*"],
      "plugins": ["unicorn", "typescript", "oxc", "import", "vue", "vitest"],
      "env": {
        "vitest": true
      },
      "rules": {
        "no-console": "off",
        "typescript/no-explicit-any": "off"
      }
    }
  ]
}
